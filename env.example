# Yantra Environment Configuration
# Copy this file to .env and update with your values

# Database Configuration
# For Docker: use host.docker.internal
# For local development: use localhost
DATABASE_URL=postgresql://yantra:yantra_dev_password@localhost:5432/yantra?sslmode=disable

# JWT Secret for authentication (minimum 32 characters)
# Generate with: openssl rand -base64 32
JWT_SECRET=your-secure-jwt-secret-min-32-chars-long

# Server Configuration
PORT=3000
NODE_ENV=development

# Email Configuration (Optional)
# Required for email node functionality
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASS=your-email-password
SMTP_FROM=noreply@example.com

# Migration API Key (Optional)
# Set this to enable manual migration control via API
# Generate with: openssl rand -hex 32
MIGRATION_API_KEY=

# Frontend Configuration (Optional)
# Used during Docker build
VITE_API_URL=http://localhost:3000

